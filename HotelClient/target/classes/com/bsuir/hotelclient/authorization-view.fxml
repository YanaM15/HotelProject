<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bsuir.controllers.AuthorizationController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <HBox prefHeight="400.0" prefWidth="600.0">
            <children>
                <AnchorPane prefHeight="400.0" prefWidth="243.0" style="-fx-background-color: white;">
                    <children>
                        <ImageView fitHeight="182.0" fitWidth="194.0" layoutX="14.0" layoutY="102.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@images/hotel_building.jpg" />
                            </image>
                        </ImageView>

                    </children></AnchorPane>
                <AnchorPane prefHeight="400.0" prefWidth="402.0" style="-fx-background-color: #CCFFFF;">
                    <children>
                        <ImageView fitHeight="54.0" fitWidth="50.0" layoutX="30.0" layoutY="38.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@images/authorization.png" />
                            </image>
                        </ImageView>
                        <Label layoutX="93.0" layoutY="35.0" prefHeight="54.0" prefWidth="240.0" text="Авторизация" textFill="TEAL">
                            <font>
                                <Font size="39.0" />
                            </font></Label>
                        <Label layoutX="45.0" layoutY="150.0" prefHeight="35.0" prefWidth="69.0" text="Логин" textFill="TEAL">
                            <font>
                                <Font size="23.0" />
                            </font>
                        </Label>
                        <Label layoutX="49.0" layoutY="205.0" prefHeight="35.0" prefWidth="87.0" text="Пароль" textFill="TEAL">
                            <font>
                                <Font size="23.0" />
                            </font>
                        </Label>
                        <TextField fx:id="login"  layoutX="167.0" layoutY="150.0" prefHeight="35.0" prefWidth="165.0" />
                        <PasswordField fx:id="password"  layoutX="167.0" layoutY="205.0" prefHeight="35.0" prefWidth="166.0" />
                        <Button fx:id="enterButton"  layoutX="167.0" layoutY="273.0" mnemonicParsing="false" onAction="#authorization"
                                prefHeight="44.0" prefWidth="166.0" style="-fx-background-color: #008080; -fx-cursor: hand;" text="Войти" textFill="#00ffd0">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font></Button>
                        <Label layoutX="46.0" layoutY="352.0" prefHeight="22.0" prefWidth="94.0" text="Нет аккаунта?" textFill="TEAL">
                            <font>
                                <Font size="14.0" />
                            </font></Label>
                        <Button fx:id="registrationButton"  layoutX="171.0" layoutY="351.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="62.0"
                                style="-fx-background-color: transparent; -fx-cursor: hand;" text="Sing up" textFill="#1235d2" />
                    </children></AnchorPane>
            </children>
        </HBox>
    </children>
</AnchorPane>
